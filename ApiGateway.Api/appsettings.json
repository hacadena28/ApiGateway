{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "BackendRoute": {
        "ClusterId": "Backend",
        "RateLimiterPolicy": "customPolicy",
        "CorsPolicy": "customPolicy",
        "Match": {
          "Path": "Backend/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "Kafka1Route": {
        "ClusterId": "Kafka1",
        "RateLimiterPolicy": "customPolicy",
        "CorsPolicy": "customPolicy",
        "Match": {
          "Path": "Kafka1/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "Kafka2Route": {
        "ClusterId": "Kafka2",
        "RateLimiterPolicy": "customPolicy",
        "CorsPolicy": "customPolicy",
        "Match": {
          "Path": "Kafka2/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      },
      "Kafka3Route": {
        "ClusterId": "Kafka3",
        "RateLimiterPolicy": "customPolicy",
        "CorsPolicy": "customPolicy",
        "Match": {
          "Path": "Kafka3/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "Backend": {
        "Destinations": {
          "Backend": {
            "Address": "http://back_end_notes/"
          }
        }
      },
      "Kafka1": {
        "Destinations": {
          "Employees/destination1": {
            "Address": "http://host.docker.internal:9092/"
          }
        }
      },
      "Kafka2": {
        "Destinations": {
          "Identity/destination1": {
            "Address": "http://host.docker.internal:9093/"
          }
        }
      },
      "Kafka3": {
        "Destinations": {
          "Notifications/destination1": {
            "Address": "http://host.docker.internal:9094/"
          }
        }
      }
    }
  },
  "CorsSettings": {
    "Origins": [
      {
        "Origin": "*",
        "AllowedMethods": [
          "GET",
          "POST",
          "PUT",
          "DELETE"
        ],
        "CorsPolicy": "customPolicy"
      }
    ]
  }
}